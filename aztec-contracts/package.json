{
    "name": "numer0n",
    "type": "module",
    "files": [
        "src",
        "test"
    ],
    "scripts": {
        "build": "yarn clean && tsc -b",
        "clean": "rm -rf ./dest .tsbuildinfo",
        "test": "DEBUG='aztec:*' NODE_NO_WARNINGS=1 node --experimental-vm-modules $(yarn bin jest) --runInBand --passWithNoTests --testTimeout=40000 --forceExit"
    },
    "dependencies": {
        "@aztec/aztec.js": "0.16.7",
        "@aztec/noir-contracts": "0.16.7",
        "@aztec/foundation": "0.16.7",
        "@aztec/types": "0.16.7",
        "@types/jest": "^29.5.5",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "ts-node": "10.9.1",
        "typescript": "5.2.2"
    },
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "transform": {
            "^.+\\.(ts|tsx)$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        },
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.m?js$": "$1"
        },
        "testRegex": "./src/.*\\.test\\.(ts|mjs)$",
        "rootDir": "./src"
    },
    "types": "./dest/index.d.ts"
}